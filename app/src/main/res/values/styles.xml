<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- V2 Vertical Presets (activity_main.xml) -->
    <style name="PresetCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/preset_card_height</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
        <item name="android:background">@drawable/bg_glass_card_classic</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PresetIconStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PresetTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_preset</item>
    </style>

    <!-- V3 Horizontal Presets (activity_main_v3.xml) -->
    <style name="PresetContainerV3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_extra_large</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PresetCardStyleV3">
        <item name="android:layout_width">@dimen/v3_preset_card_size</item>
        <item name="android:layout_height">@dimen/v3_preset_card_size</item>
        <item name="android:background">@drawable/bg_glass_card_classic</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="PresetIconStyleV3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_station_placeholder</item>
    </style>

    <style name="PresetTextStyleV3">
        <item name="android:layout_width">@dimen/v3_preset_card_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_preset_small</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Settings Menu Styles -->
    <style name="SettingsItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_glass_card_classic</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/bg_glass_card_classic</item>
    </style>

    <!-- UNIFIED PREMIUM DIALOG STYLES (V4.1) -->
    <style name="DialogContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_glass_card_classic</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="DialogTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogSubheaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFD700</item> <!-- Gold -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="DialogBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_submenu_box</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DialogBoxTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DialogBoxDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogCloseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/bg_submenu_box</item> <!-- Reuse box style for now, or create red one -->
        <item name="android:backgroundTint">#CCFF5555</item> <!-- Red Tint -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:text">CERRAR</item> 
    </style>
</resources>
