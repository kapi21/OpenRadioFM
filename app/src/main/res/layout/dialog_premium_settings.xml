<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="650dp"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout style="@style/DialogContainerStyle">

        <!-- Header -->
        <LinearLayout style="@style/DialogTitleLayout">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/radio_eq_n"
                android:layout_marginEnd="12dp"/>
            <TextView
                style="@style/DialogTitleText"
                android:text="@string/premium_customization"/>
        </LinearLayout>

        <!-- SECTION: PERSONALIZACIÓN -->
        <TextView
            style="@style/DialogSubheaderText"
            android:text="@string/premium_customization"/>

        <!-- Submenu Box: Seleccionar Tema -->
        <LinearLayout
            android:id="@+id/cardTheme"
            style="@style/DialogBoxStyle">
            
            <TextView
                style="@style/DialogBoxTitle"
                android:text="@string/select_skin"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <View
                    android:id="@+id/viewColorPreview"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/radio_icon_p01"
                    android:layout_marginEnd="12dp"/>
                
                <TextView
                    style="@style/DialogBoxDesc"
                    android:text="@string/touch_to_change"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Submenu Box: Seleccionar Tipografía -->
        <LinearLayout
            android:id="@+id/cardFonts"
            style="@style/DialogBoxStyle">
            
            <TextView
                style="@style/DialogBoxTitle"
                android:text="@string/select_font"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/tvFontPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abc 123"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"/>
                
                <TextView
                    style="@style/DialogBoxDesc"
                    android:text="@string/touch_to_change"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Submenu Box: Modo de Fondo -->
        <LinearLayout
            android:id="@+id/cardBackground"
            style="@style/DialogBoxStyle">
            
            <TextView
                style="@style/DialogBoxTitle"
                android:text="@string/background_mode"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginEnd="12dp"/>
                
                <TextView
                    android:id="@+id/tvBackgroundStatus"
                    style="@style/DialogBoxDesc"
                    android:text="@string/touch_to_change"/>
            </LinearLayout>
        </LinearLayout>

        <!-- App Options Header -->
        <TextView
            style="@style/DialogSubheaderText"
            android:text="@string/app_options"
            android:layout_marginTop="16dp"/>
        
        <!-- V4.0: Language Selector Row -->
        <LinearLayout
            android:id="@+id/rowLanguage"
            style="@style/DialogBoxStyle"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_language"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            
            <TextView
                android:id="@+id/tvCurrentLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language_spanish"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textColor="#AAAAAA"
                android:textSize="20sp"/>
        </LinearLayout>

        <!-- Option: Logos Online -->
        <LinearLayout style="@style/SettingsRowStyle">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/online_logos"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchLogosOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Option: Night Mode -->
        <LinearLayout style="@style/SettingsRowStyle">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/night_mode_auto"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNightMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Option: History -->
        <LinearLayout style="@style/SettingsRowStyle">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_history"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSaveHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
        <!-- Option: Swipe Gestures -->
        <LinearLayout style="@style/SettingsRowStyle">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enable_gestures_beta"
                android:textColor="@color/white"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchSwipeGestures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- About Button (NEW for V4.1) -->
        <LinearLayout
            android:id="@+id/btnAbout"
            style="@style/SettingsRowStyle"
            android:clickable="true"
            android:focusable="true">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about_openradio"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="›"
                android:textColor="#AAAAAA"
                android:textSize="20sp"/>
        </LinearLayout>

        <!-- Close Button -->
        <TextView
            android:id="@+id/btnCloseSettings"
            style="@style/DialogCloseButton"
            android:text="@string/close"/>

    </LinearLayout>
</ScrollView>
