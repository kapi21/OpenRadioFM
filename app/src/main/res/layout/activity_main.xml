<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grainy_dark">

    <!-- Premium Background Layer (Dynamic Blurred Logo) -->
    <ImageView
        android:id="@+id/ivDynamicBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Guidelines for Columns (30% | 40% | 30%) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_col1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_col2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <!-- ====================================================================================== -->
    <!-- COLUMN 1: PRESETS (30%) -->
    <!-- ====================================================================================== -->
    <ScrollView
        android:id="@+id/scrollViewPresets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingEnd="4dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_col1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Preset Cards Generator -->
            <!-- Inline presets used below to maintain ID compatibility -->
            
            <!-- 
                 Optimization Note: Since we are moving to ConstraintLayout, it would be better 
                 to use a RecyclerView, but to minimize Java changes for now, we will 
                 keep the ScrollView structure but we will have to Inline the cards 
                 or create a separate layout file if we wanted to be clean.
                 
                 However, to avoid creating new files unless necessary, I will keep the 
                 inline LinearLayout definitions for the presets but simplified.
                 
                 Actually, looking at the previous file, there are 12 presets hardcoded. 
                 I will replicate that behavior to maintain ID compatibility.
            -->

            <!-- Preset 1 -->
            <LinearLayout android:id="@+id/cardP1" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP1" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP1" android:text="87.5" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 2 -->
            <LinearLayout android:id="@+id/cardP2" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP2" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP2" android:text="90.0" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 3 -->
            <LinearLayout android:id="@+id/cardP3" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP3" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP3" android:text="100.0" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 4 -->
            <LinearLayout android:id="@+id/cardP4" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP4" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP4" android:text="104.0" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 5 -->
            <LinearLayout android:id="@+id/cardP5" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP5" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP5" android:text="106.0" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 6 -->
            <LinearLayout android:id="@+id/cardP6" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP6" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP6" android:text="108.0" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 7 -->
            <LinearLayout android:id="@+id/cardP7" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP7" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP7" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 8 -->
            <LinearLayout android:id="@+id/cardP8" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP8" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP8" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 9 -->
            <LinearLayout android:id="@+id/cardP9" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP9" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP9" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 10 -->
            <LinearLayout android:id="@+id/cardP10" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP10" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP10" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 11 -->
            <LinearLayout android:id="@+id/cardP11" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP11" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP11" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>
            <!-- Preset 12 -->
            <LinearLayout android:id="@+id/cardP12" style="@style/PresetCardStyle"><ImageView android:id="@+id/ivP12" style="@style/PresetIconStyle"/><TextView android:id="@+id/tvP12" android:text="Empty" style="@style/PresetTextStyle"/></LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ====================================================================================== -->
    <!-- COLUMN 2: CENTER INFO (40%) -->
    <!-- ====================================================================================== -->
    
    <!-- Frequency Box -->
    <FrameLayout
        android:id="@+id/boxFrequency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/bg_glass_card_classic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_col1"
        app:layout_constraintEnd_toStartOf="@id/guideline_col2"
        app:layout_constraintBottom_toTopOf="@+id/btnSeekDown">

        <ImageView
            android:id="@+id/ivBandIndicator"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_gravity="top|start"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/radio_fm1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFrequency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="100.00"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="@dimen/text_size_frequency_min"
            app:autoSizeMaxTextSize="@dimen/text_size_frequency_large"
            app:autoSizeStepGranularity="2sp"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/ivFavoriteIndicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:alpha="0.8"
            android:visibility="gone"
            android:src="@drawable/radio_icon_p01" />
    </FrameLayout>

    <!-- Seek Buttons -->
    <ImageButton
        android:id="@+id/btnSeekDown"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bg_glass_card_classic"
        android:src="@drawable/seek_down"
        android:scaleType="fitCenter"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRdsName"
        app:layout_constraintStart_toEndOf="@id/guideline_col1"
        app:layout_constraintEnd_toStartOf="@+id/btnSeekUp"
        app:layout_constraintHorizontal_weight="1"/>
        
    <ImageButton
        android:id="@+id/btnSeekUp"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/bg_glass_card_classic"
        android:src="@drawable/seek_up"
        android:scaleType="fitCenter"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRdsName"
        app:layout_constraintStart_toEndOf="@+id/btnSeekDown"
        app:layout_constraintEnd_toStartOf="@id/guideline_col2"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- RDS Name -->
    <TextView
        android:id="@+id/tvRdsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/bg_glass_card_classic"
        android:gravity="center"
        android:text="STATION"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_rds_name"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvRdsInfo"
        app:layout_constraintStart_toEndOf="@id/guideline_col1"
        app:layout_constraintEnd_toStartOf="@id/guideline_col2"/>

    <!-- RDS Info -->
    <TextView
        android:id="@+id/tvRdsInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/bg_glass_card_classic"
        android:gravity="center"
        android:text="RDS TEXT INFO"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_rds_info"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="6dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBand"
        app:layout_constraintStart_toEndOf="@id/guideline_col1"
        app:layout_constraintEnd_toStartOf="@id/guideline_col2"/>

    <!-- Band & Scan -->
    <ImageButton
        android:id="@+id/btnBand"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/bg_glass_card_classic"
        android:src="@drawable/radio_band_n"
        android:scaleType="fitCenter"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_col1"
        app:layout_constraintEnd_toStartOf="@+id/btnAutoScan"
        app:layout_constraintHorizontal_weight="1"/>
        
    <ImageButton
        android:id="@+id/btnAutoScan"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/bg_glass_card_classic"
        android:src="@drawable/radio_scan_n"
        android:scaleType="fitCenter"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBand"
        app:layout_constraintEnd_toStartOf="@id/guideline_col2"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- ====================================================================================== -->
    <!-- COLUMN 3: LOGO & EXTRAS (30%) -->
    <!-- ====================================================================================== -->

    <!-- Logo Box (Matches Frequency Box Height strictly) -->
    <LinearLayout
        android:id="@+id/boxLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSeekDown"
        app:layout_constraintStart_toEndOf="@id/guideline_col2"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivMainLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </LinearLayout>


    <!-- Controls Row 1 (Android/Save) - WEIGHTED CHAIN -->
    <ImageButton 
        android:id="@+id/btnExtra1" 
        android:layout_width="0dp" 
        android:layout_height="0dp" 
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp" 
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/ic_android_settings" 
        android:scaleType="fitCenter" 
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@+id/boxLogo"
        app:layout_constraintBottom_toTopOf="@+id/btnLocDx"
        app:layout_constraintStart_toEndOf="@id/guideline_col2" 
        app:layout_constraintEnd_toStartOf="@+id/btnExtra2"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>
        
    <ImageButton 
        android:id="@+id/btnExtra2" 
        android:layout_width="0dp" 
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="2dp" 
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/ic_save_load" 
        android:scaleType="fitCenter" 
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@+id/boxLogo"
        app:layout_constraintBottom_toTopOf="@+id/btnMute"
        app:layout_constraintStart_toEndOf="@+id/btnExtra1" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Controls Row 2 (Loc/Mute) - WEIGHTED CHAIN -->
    <ImageButton 
        android:id="@+id/btnLocDx" 
        android:layout_width="0dp" 
        android:layout_height="0dp" 
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp" 
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/radio_loc_n" 
        android:scaleType="fitCenter" 
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnExtra1"
        app:layout_constraintBottom_toTopOf="@+id/btnSettings"
        app:layout_constraintStart_toEndOf="@id/guideline_col2" 
        app:layout_constraintEnd_toStartOf="@+id/btnMute"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>
        
    <ImageButton 
        android:id="@+id/btnMute" 
        android:layout_width="0dp" 
        android:layout_height="0dp" 
        android:layout_marginTop="0dp"
        android:layout_marginStart="2dp" 
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/radio_mute_n" 
        android:scaleType="fitCenter" 
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnExtra2"
        app:layout_constraintBottom_toTopOf="@+id/btnGps"
        app:layout_constraintStart_toEndOf="@+id/btnLocDx" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Controls Row 3 (Settings/GPS) - WEIGHTED CHAIN -->
    <ImageButton 
        android:id="@+id/btnSettings" 
        android:layout_width="0dp" 
        android:layout_height="0dp" 
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp" 
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/radio_eq_n" 
        android:scaleType="fitCenter" 
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btnLocDx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_col2" 
        app:layout_constraintEnd_toStartOf="@+id/btnGps"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>
        
    <ImageButton 
        android:id="@+id/btnGps" 
        android:layout_width="0dp" 
        android:layout_height="0dp" 
        android:layout_marginTop="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="4dp" 
        android:background="@drawable/bg_glass_card" 
        android:src="@drawable/radio_gps" 
        android:scaleType="fitCenter" 
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSettings" 
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
