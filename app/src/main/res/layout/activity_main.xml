    <!-- ====================================================================================== -->
    <!-- COLUMN 2: CENTER INFO (40%) -->
    <!-- ====================================================================================== -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingHorizontal="4dp">

        <!-- Frequency Box -->
        <LinearLayout
            android:id="@+id/boxFrequency"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_glass_card_classic"
            android:gravity="center"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBandIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFrequency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100.00"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="40sp"
                app:autoSizeMaxTextSize="115sp"
                app:autoSizeStepGranularity="2sp"
                android:maxLines="1"
                xmlns:app="http://schemas.android.com/apk/res-auto"/>
        </LinearLayout>

        <!-- Seek Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnSeekDown"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_glass_card_classic"
                android:src="@drawable/seek_down"
                android:scaleType="fitCenter"
                android:padding="12dp"/>
            <ImageButton
                android:id="@+id/btnSeekUp"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_glass_card_classic"
                android:src="@drawable/seek_up"
                android:scaleType="fitCenter"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- RDS Name -->
        <TextView
            android:id="@+id/tvRdsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_glass_card_classic"
            android:gravity="center"
            android:text="STATION"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:padding="8dp"/>

        <!-- RDS Info -->
        <TextView
            android:id="@+id/tvRdsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_glass_card_classic"
            android:gravity="center"
            android:text="RDS TEXT INFO"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="6dp"/>

        <!-- Band & Scan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnBand"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_glass_card_classic"
                android:src="@drawable/radio_fm1"
                android:scaleType="fitCenter"
                android:padding="8dp"/>
            <ImageButton
                android:id="@+id/btnAutoScan"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_glass_card_classic"
                android:src="@drawable/radio_scan_n"
                android:scaleType="fitCenter"
                android:padding="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- ====================================================================================== -->
    <!-- COLUMN 3: LOGO & EXTRAS (30%) -->
    <!-- ====================================================================================== -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="4dp">

        <!-- Logo Box -->
        <LinearLayout
            android:id="@+id/boxLogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_glass_card_classic"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ivMainLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <!-- Controls Grid -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
            <ImageButton android:id="@+id/btnLocDx" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_glass_card" android:src="@drawable/radio_loc_n" android:scaleType="fitCenter" android:padding="12dp"/>
            <ImageButton android:id="@+id/btnMute" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:background="@drawable/bg_glass_card" android:src="@drawable/radio_mute_n" android:scaleType="fitCenter" android:padding="12dp"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageButton android:id="@+id/btnSettings" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@drawable/bg_glass_card" android:src="@drawable/radio_eq_n" android:scaleType="fitCenter" android:padding="12dp"/>
            <ImageButton android:id="@+id/btnGps" android:layout_width="0dp" android:layout_height="90dp" android:layout_weight="1" android:background="@drawable/bg_glass_card" android:src="@drawable/radio_gps" android:scaleType="fitCenter" android:padding="18dp"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</FrameLayout>
